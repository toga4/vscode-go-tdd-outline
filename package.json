{
  "name": "go-tdt-outline",
  "displayName": "Go TDT Outline",
  "description": "Display table driven test cases in Outline view.",
  "version": "0.0.1",
  "publisher": "toga4",
  "repository": {
    "type": "git",
    "url": "https://github.com/toga4/vscode-go-tdt-outline"
  },
  "keywords": [
    "go",
    "golang",
    "test",
    "table-driven",
    "outline",
    "symbol"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages",
    "Testing"
  ],
  "activationEvents": [
    "onLanguage:go"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Go TDT Outline",
      "properties": {
        "go-tdt-outline.timeout": {
          "type": "number",
          "default": 10000,
          "description": "Timeout for parser execution in milliseconds"
        },
        "go-tdt-outline.maxFileSize": {
          "type": "number",
          "default": 1048576,
          "description": "Maximum file size to analyze in bytes (default: 1MB)"
        }
      }
    }
  },
  "scripts": {
    "clean": "rm -rf out bin",
    "build-go": "CGO_ENABLED=0 go build -ldflags='-s -w' -o ./bin/parser${EXT} ./parser",
    "build-go:darwin-arm64": "EXT= GOOS=darwin GOARCH=arm64 pnpm run build-go",
    "build-go:linux-arm64": "EXT= GOOS=linux GOARCH=arm64 pnpm run build-go",
    "build-go:linux-x64": "EXT= GOOS=linux GOARCH=amd64 pnpm run build-go",
    "build-go:win32-arm64": "EXT=.exe GOOS=windows GOARCH=arm64 pnpm run build-go",
    "build-go:win32-x64": "EXT=.exe GOOS=windows GOARCH=amd64 pnpm run build-go",
    "compile": "tsc -p ./ && cp -r src/test/testdata out/test/",
    "watch": "tsc -watch -p ./",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "pretest": "pnpm run clean && pnpm run build-go && pnpm run compile",
    "test": "vscode-test",
    "test:update-snapshots": "UPDATE_SNAPSHOTS=true pnpm run test",
    "package": "vsce package",
    "package:darwin-arm64": "pnpm run package --target darwin-arm64",
    "package:linux-arm64": "pnpm run package --target linux-arm64",
    "package:linux-x64": "pnpm run package --target linux-x64",
    "package:win32-arm64": "pnpm run package --target win32-arm64",
    "package:win32-x64": "pnpm run package --target win32-x64"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.4",
    "@types/diff-match-patch": "^1.0.36",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.5.0",
    "diff-match-patch": "^1.0.5",
    "picocolors": "^1.1.1",
    "typescript": "^5.8.3"
  }
}
