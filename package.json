{
  "name": "go-tdt-outline",
  "displayName": "Go Table Driven Test Outline",
  "description": "Display table driven test cases in Outline view.",
  "version": "0.0.1",
  "publisher": "toga4",
  "repository": {
    "type": "git",
    "url": "https://github.com/toga4/vscode-go-tdt-outline"
  },
  "keywords": [
    "go",
    "golang",
    "test",
    "table-driven",
    "outline",
    "symbol"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages",
    "Testing"
  ],
  "activationEvents": [
    "onLanguage:go"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Go TDD Outline",
      "properties": {
        "go-tdd-outline.timeout": {
          "type": "number",
          "default": 10000,
          "description": "Timeout for parser execution in milliseconds"
        },
        "go-tdd-outline.maxFileSize": {
          "type": "number",
          "default": 1048576,
          "description": "Maximum file size to analyze in bytes (default: 1MB)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run check",
    "lint": "biome lint src",
    "lint:fix": "biome lint --write src",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "test": "vscode-test",
    "package": "vsce package"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.5.0",
    "typescript": "^5.8.3"
  }
}
